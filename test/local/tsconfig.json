{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "types": ["node", "playwright"],
    "baseUrl": "./",
    "paths": {},
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["tests/**/*", "playwright.config.ts"],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report",
    "blob-report",
    "playwright/.cache"
  ]
}
